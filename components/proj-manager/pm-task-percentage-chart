// components/pm-task-percentage-chart.js

document.addEventListener('DOMContentLoaded', function() {
    const chartElement = document.getElementById('taskPercentageChart');
    
    // Safety check
    if (!chartElement) return;

    const ctxDonut = chartElement.getContext('2d');
    
    new Chart(ctxDonut, {
        type: 'doughnut',
        data: {
            labels: ['Total', 'In Progress', 'In Review'],
            datasets: [{
                data: [50, 30, 20],
                backgroundColor: ['#3A6B72', '#77ACA2', '#9DBEBB'],
                borderWidth: 0,
                hoverOffset: 4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '70%',
            plugins: { legend: { display: false } }
        }
    });
});